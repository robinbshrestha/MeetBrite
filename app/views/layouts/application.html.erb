<!DOCTYPE html>
<html>
  <head>
    <title>We are what we do | Meetup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": "<%= current_user.id %>",
          "name":"<%= current_user.name %>",
          "email": "<%= current_user.email %>",
          "location_id": <%= current_user.location_id %>
        };
      </script>
      <% end %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
